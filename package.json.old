{
  "name": "nibit",
  "displayName": "Nibit",
  "version": "1.0.0",
  "publisher": "TGDevStudios",
  "main": "./out/extension.js",
  "activationEvents": [
    "onView:nibit-commands"
  ],
  "contributes": {
    "configuration": {
      "title": "Nibit",
      "properties": {
        "nibit.extensions": {
          "type": "array",
          "default": [
            "html",
            "css",
            "js",
            "ts",
            "json"
          ],
          "description": "File extensions to show in Nibit explorer"
        }
      }
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "nibit-explorer",
          "title": "Nibit",
          "icon": "resources/Nibit_SimplifiedIcon_vazado.png"
        }
      ]
    },
    "views": {
      "nibit-explorer": [
        {
          "id": "nibit-commands",
          "name": "Explorer",
          "icon": "resources/Nibit_SimplifiedIcon_vazado.png"
        }
      ]
    },
    "commands": [
      {
        "command": "nibit.search",
        "title": "Search",
        "icon": "$(search)"
      },
      {
        "command": "nibit.insertPath",
        "title": "Insert Path",
        "icon": "$(add)"
      },
      {
        "command": "nibit.clearSearch",
        "title": "Clear Search",
        "icon": "$(close)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "nibit.search",
          "when": "view == nibit-commands",
          "group": "navigation"
        },
        {
          "command": "nibit.clearSearch",
          "when": "view == nibit-commands",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "nibit.insertPath",
          "when": "view == nibit-commands",
          "group": "inline"
        }
      ]
    }
  }
}
